<?xml version="1.0"?>

<launch>
    <arg name="robot"/>
    <arg name="laser1"/>
    <arg name="depth_camera"/>
    <arg name="depth_camera_name" />

    <node pkg="tf" type="static_transform_publisher" name="map2frame" args="0 0 0 0 0 0 /my_frame /map 100" /> 
    <node pkg="tf" type="static_transform_publisher" name="base2LRF" args="0.04 0 0.37 0 0 0 $(arg robot)/base_link /$(arg robot)/$(arg laser1) 100" /> 
    <node pkg="tf" type="static_transform_publisher" name="base2depthCamera" args="0 0 0.87 0 1.57 0 $(arg robot)/base_link xtion_pro 100" /> 

    <group ns="$(arg robot)"> 

        <group if="$(arg depth_camera)">
            <arg name="pi/2" value="1.5707963267948966" />
            <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) 0 -$(arg pi/2)" />
            <arg name="camera" value="$(arg depth_camera_name)" />
        
            <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link0"
                args="0 0 0 0 0 0  xtion_pro $(arg camera)_link 100" />
            <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link"
                args="0 -0.045  0 0 0 0  $(arg camera)_link $(arg camera)_depth_frame 100" />
            <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link1"
                args="0 -0.02 0 0 0 0  $(arg camera)_link $(arg camera)_rgb_frame 100" />
            <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link2"
                args="$(arg optical_rotate) $(arg camera)_depth_frame $(arg camera)_depth_optical_frame  100" />
            <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link3"
                args="$(arg optical_rotate) $(arg camera)_rgb_frame $(arg camera)_rgb_optical_frame 100" />
        </group>

    </group> 

</launch>
