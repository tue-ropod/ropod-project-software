<?xml version="1.0" encoding="UTF-8"?>
<launch>
  
	<arg name="robotName" default="pico"/>  
	<arg name="topic1" value="/$(arg robotName)/laser/scan"/>
	<arg name="topic2" value="/$(arg robotName)/laser/urg_node/parameter_descriptions"/>
	<arg name="topic3" value="/$(arg robotName)/laser/urg_node/parameter_updates"/>
	<arg name="topic4" value="/$(arg robotName)/laser/diagnostics"/>
	<arg name="topic5" value="/$(arg robotName)/cmd_vel"/>
	<arg name="topic6" value="/$(arg robotName)/odom"/>
	
	<arg name="laser1_name" value ="laser"/>
	
	<arg name="file" value="2017-11-10-13-25-22.bag"/>
	<arg name="folder" value="/home/wouter/Desktop/testdata/2017-11-10/"/>
	<arg name="robot_path" default="$(env CATKIN_WORKSPACE)/src/platform/$(arg robotName)"/>
	<arg name="robot_bringup_path" default="$(arg robot_path)/$(arg robotName)_bringup"/>

	
	<!-- Launch replaying of bag-file -->
	<param name="use_sim_time" value="true" />
        <node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(arg folder)/$(arg file) --topics  $(arg topic1) $(arg topic2) $(arg topic3) $(arg topic4) $(arg topic5) $(arg topic6)"/>
	
	<!-- Launch tf broadcaster for pico robot -->
	<node pkg="pico_bringup" type="tf_broadcaster_simulator" name="tf_broadcaster_simulator" />

	<!-- Launch ED -->
	<node pkg="ed" type="ed" name="ed" args="$(find pico_navigation_test)/config/model-replay-data.yaml"/>

	% Launch ED GUI server
	<node pkg="ed_gui_server" type="ed_rviz_publisher" name="ed_rviz_publisher"/>
	
	<!-- Launch RVIZ -->
	<include file="$(arg robot_bringup_path)/launch/tools/rviz.launch"/>

  </launch>
